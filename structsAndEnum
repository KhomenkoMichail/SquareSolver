enum amountOfRoots {
    infinityRoots = -1,
    noRoots = 0,
    oneRoot = 1,
    twoRoots = 2,
    indefinityRoots = 5
};

struct structForArg {
            double a;
            double b;
            double c;
};

struct structForRoots {
    double x1;
    double x2;
    enum amountOfRoots nRoots;
};

struct equation {
    struct structForArg arguments;
    struct structForRoots roots;
};

struct solution {
        amountOfRoots nAnswers;
        double firstRoot;
        double secondRoot;
    };
